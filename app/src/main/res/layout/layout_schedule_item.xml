<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/schedule_item_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/schedule_item_time"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/team_card_text_padding"
            android:paddingEnd="@dimen/team_card_text_padding"
            android:text="12:30 PM"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/schedule_item_event"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/schedule_item_time"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:text="XYZ Finals"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/schedule_item_location"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/schedule_item_event"
            android:layout_toEndOf="@id/schedule_item_time"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:text="MP Hall"
            android:textSize="18sp" />

        <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:background="#fff"
            android:contentDescription="@null"
            android:src="@drawable/selector_bookmarks"
            android:tint="@color/colorAccent" />

    </RelativeLayout>

</android.support.v7.widget.CardView>